<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <EditText
        android:id="@+id/inputTextVorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name_first"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/inputTextNachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name_last"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/inputTextStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/destination_start"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="154dp" />

    <EditText
        android:id="@+id/inputTextZiel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/destination_end"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="209dp" />

    <EditText
        android:id="@+id/inputTextUhrzeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="@string/time"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="263dp" />

    <Button
        android:id="@+id/butttonNext"
        android:layout_width="173dp"
        android:layout_height="49dp"
        android:background="#00C853"
        android:text="@string/next"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="669dp" />

    <Button
        android:id="@+id/buttonAbort"
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:background="#D32F2F"
        android:text="@string/abort"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="669dp" />

</androidx.constraintlayout.widget.ConstraintLayout>